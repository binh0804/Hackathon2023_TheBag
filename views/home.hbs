<div class='row justify-content-between'>
  <div class='col-sm p-5'>
    <form method='POST' id="form" action='/gpt/form'>
      <div class='form-group'>
        <label for='formTittle'>Nhập tiêu đề cho Form</label>
        <input
          type='text'
          name='formTittle'
          class='form-control'
          id='formTittle'
          placeholder='Nhập tiêu đề...'
        />
      </div>
      <div class='form-group'>
        <label for='exampleFormControlTextarea1'>Nội dung bài học</label>
        <textarea
          class='form-control'
          id='exampleFormControlTextarea1'
          name='userInput'
          rows='5'
        ></textarea>
      </div>
      <button type='submit' class='btn btn-primary'>Tạo Form</button>
    </form>

    <div class='loader-wrapper'>
      <span class='loader'><span class='loader-inner'></span></span>
    </div>
  </div>
  <div class='box-container col-sm'>
    <div class='embed-responsive embed-responsive-16by9 glass-box'>
      <iframe
        allowtransparency='true'
        class='embed-responsive-item'
        src={{uri}}
      ></iframe>
    </div>
  </div>
</div>